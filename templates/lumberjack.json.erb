{
  "network": {
    "servers":         ["<%= @server %>:<%= @port %>"],
    "ssl ca":          "/var/lib/puppet/ssl/certs/ca.pem",
    "ssl key":         "/var/lib/puppet/ssl/private_keys/<%= @certname %>.pem",
    "ssl certificate": "/var/lib/puppet/ssl/certs/<%= @certname %>.pem",
  },
  "files": [
    {
      "paths": [ "/var/log/dmesg" ],
      "fields": { "type": "dmesg", "program": "kernel" }
    },
    {
      "paths": [
        "/var/log/messages",
        "/var/log/syslog"
      ],
      "fields": { "type": "syslog" }
    },
    {
      "paths": [
        "/var/log/mail.log",
        "/var/log/mail.err",
      ],
      "fields": { "type": "mail", "program": "postfix" }
    },
    {
      "paths": [ "/var/log/nginx/*.log" ],
      "fields": { "type": "mail", "program": "nginx" }
    }
  ]
}

